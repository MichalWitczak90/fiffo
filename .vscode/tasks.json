{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make -j8",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command": "cd build/ && rm -rf ./* && cmake .. && make -j8 VERBOSE=1",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
